    "def Jacobian(pos): ## Jacobian function to pass into scipy \n",
    "    N_atom=int(len(pos)/3)\n",
    "    force = np.zeros([N_atom, 3])\n",
    "    for i in range(N_atom):\n",
    "        pos0=pos[i*3:(i+1)*3]\n",
    "        for j in range(N_atom):\n",
    "            pos1=pos[j*3:(j+1)*3]\n",
